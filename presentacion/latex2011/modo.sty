% Definición de comportamiento en cada nueva subsección:
%  -> Título en función de sección y subsección
\AtBeginSection[]
{
  \begin{frame}<beamer>
   \frametitle{Índice}
   \transdissolve
   \tableofcontents[currentsection]
  \end{frame}
  
}
\AtBeginSubsection[]
{
  \begin{frame}<beamer>
   \frametitle{Índice}
   \transdissolve
   \tableofcontents[currentsection,currentsubsection]
  \end{frame}
  
}
